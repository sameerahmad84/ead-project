<Window x:Class="LoginSystem.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit User" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f5f6fa">
        
    <Window.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="btnBack" 
                        Content="â† Back" 
                        Click="btnBack_Click"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#3498db"
                        Foreground="White"
                        Padding="15,5"
                        Margin="0,0,10,0"/>
                
                <TextBlock x:Name="txtHeader" 
                           Text="Add New User" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Form -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10" 
                Padding="30">
            <StackPanel>
                <TextBlock Text="Username" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" 
                         Margin="0,0,0,20"
                         Padding="10,8"
                         BorderThickness="1"
                         BorderBrush="#dcdde1"/>

                <TextBlock Text="Email" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" 
                         Margin="0,0,0,20"
                         Padding="10,8"
                         BorderThickness="1"
                         BorderBrush="#dcdde1"/>

                <StackPanel x:Name="passwordPanel">
                    <TextBlock x:Name="txtPasswordLabel" 
                              Text="Password" 
                              FontWeight="Bold" 
                              Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtPassword" 
                                Margin="0,0,0,20"
                                Padding="10,8"
                                BorderThickness="1"
                                BorderBrush="#dcdde1"/>

                    <TextBlock x:Name="txtConfirmPasswordLabel"
                              Text="Confirm Password"
                              FontWeight="Bold" 
                              Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtConfirmPassword" 
                                Margin="0,0,0,20"
                                Padding="10,8"
                                BorderThickness="1"
                                BorderBrush="#dcdde1"/>
                </StackPanel>

                <TextBlock Text="Role" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbRole" 
                          Margin="0,0,0,20"
                          Padding="10,8"
                          BorderThickness="1"
                          BorderBrush="#dcdde1">
                    <ComboBoxItem Content="Clerk"/>
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="Super-Admin"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Click="btnCancel_Click"
                    Style="{StaticResource ActionButtonStyle}"
                    Background="#95a5a6"
                    Foreground="White"
                    Padding="15,5"
                    Margin="0,0,10,0"/>
            <Button Content="Save" 
                    Click="btnSave_Click"
                    Style="{StaticResource ActionButtonStyle}"
                    Background="#2ecc71"
                    Foreground="White"
                    Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window> 