<Window x:Class="LoginSystem.AddEditCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Course" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="txtHeader" Text="Add Course" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Course Code" Margin="0,0,0,5"/>
            <TextBox x:Name="txtCourseCode" Margin="0,0,0,10"/>

            <TextBlock Text="Course Name" Margin="0,0,0,5"/>
            <TextBox x:Name="txtCourseName" Margin="0,0,0,10"/>

            <TextBlock Text="Description" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDescription" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>

            <TextBlock Text="Credits" Margin="0,0,0,5"/>
            <TextBox x:Name="txtCredits" Margin="0,0,0,10"/>

            <TextBlock Text="Department" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDepartment" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Save" Width="80" Height="30" Margin="0,0,10,0" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="80" Height="30" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 