<Window x:Class="LoginSystem.Views.CoursesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Course Seating Plan" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Course Seating Plan" 
                     FontSize="24" 
                     FontWeight="Bold" 
                     Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Course Selection and Controls -->
            <Border Grid.Column="0" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="1" 
                    Margin="0,0,10,0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="10">
                        <TextBlock Text="Select Course" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Margin="0,0,0,10"/>
                        
                        <ComboBox x:Name="CourseComboBox" 
                                DisplayMemberPath="CourseName"
                                SelectionChanged="CourseComboBox_SelectionChanged"
                                Margin="0,0,0,10"/>

                        <TextBlock Text="Room Configuration" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Margin="0,10,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Rows:" 
                                     VerticalAlignment="Center" 
                                     Margin="0,0,10,0"/>
                            <TextBox x:Name="RowsTextBox" 
                                   Width="50" 
                                   Text="5"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Columns:" 
                                     VerticalAlignment="Center" 
                                     Margin="0,0,10,0"/>
                            <TextBox x:Name="ColumnsTextBox" 
                                   Width="50" 
                                   Text="6"/>
                        </StackPanel>

                        <Button x:Name="GenerateSeatingPlanButton" 
                                Content="Generate Seating Plan" 
                                Click="GenerateSeatingPlanButton_Click"
                                Margin="0,10,0,0"
                                Padding="10,5"/>
                    </StackPanel>

                    <ListView x:Name="StudentsListView" 
                            Margin="10">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding FirstName}" 
                                             FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding LastName}" 
                                             Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </Border>

            <!-- Right Panel: Seating Plan Grid -->
            <Border Grid.Column="1" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="1">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                             Text="Seating Plan" 
                             FontSize="16" 
                             FontWeight="SemiBold" 
                             Margin="10"/>
                    
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="SeatingPlanGrid" 
                                    Margin="10">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Rows="1"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Width="100" 
                                                        Height="60" 
                                                        Margin="5" 
                                                        BorderBrush="#DDDDDD" 
                                                        BorderThickness="1">
                                                    <Grid>
                                                        <TextBlock Text="{Binding StudentName}" 
                                                                 TextWrapping="Wrap" 
                                                                 TextAlignment="Center" 
                                                                 VerticalAlignment="Center" 
                                                                 Margin="5"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window> 