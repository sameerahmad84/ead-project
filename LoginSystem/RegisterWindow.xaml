<Window x:Class="LoginSystem.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register New User" Height="500" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Create New Account" 
                       FontSize="24" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="Username" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" 
                     Margin="0,0,0,10"
                     Padding="5"/>
            
            <TextBlock Text="Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" 
                        Margin="0,0,0,10"
                        Padding="5"/>
            
            <TextBlock Text="Confirm Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtConfirmPassword" 
                        Margin="0,0,0,10"
                        Padding="5"/>

            <TextBlock Text="Email (Optional)" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" 
                     Margin="0,0,0,20"
                     Padding="5"/>
            
            <Button x:Name="btnRegister" 
                    Content="Create Account" 
                    Click="btnRegister_Click"
                    Background="#28a745"
                    Foreground="White"
                    Padding="10,5"
                    Margin="0,0,0,10"/>
            
            <Button x:Name="btnBack" 
                    Content="Back to Login" 
                    Click="btnBack_Click"
                    Background="#6c757d"
                    Foreground="White"
                    Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window> 