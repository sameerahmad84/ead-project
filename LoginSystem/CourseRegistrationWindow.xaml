<Window x:Class="LoginSystem.CourseRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Course Registration" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Student: " VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock x:Name="txtStudentName" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <DataGrid x:Name="dgCourses" Grid.Row="1" AutoGenerateColumns="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="50"/>
                <DataGridTextColumn Header="Course Code" Binding="{Binding CourseCode}" Width="100"/>
                <DataGridTextColumn Header="Course Name" Binding="{Binding CourseName}" Width="200"/>
                <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="120"/>
                <DataGridTextColumn Header="Credits" Binding="{Binding Credits}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnSave" Content="Save Registration" Width="120" Height="30" Margin="0,0,10,0" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="100" Height="30" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 